---
const { content } = Astro.props
const image = content.image.startsWith("public")
	? content.image.replace("public", "") : content.image
const d = String(new Date(content.date)).split(' ')
const date = `Published ${d[0]}, ${d[1]} ${d[2]}`
---
<div class="article__hero">
	<h1>{ content.title }</h1>
	<p style="margin-bottom: 0;">{ content.description }</p>
	<p class="small">{ date }</p>
	<img
		src={ image }
		alt={content.alt}
		style="margin-top: 2em; margin-bottom: 2em;"
	/>
</div>